{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "general": {
      "model": "anthropic/claude-sonnet-4-5",
    },
  },
  "mcp": {
    "chakra-ui": {
      "type": "local",
      "command": ["npx", "-y", "@chakra-ui/react-mcp"],
      "enabled": true,
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true,
    },
    "aws-iac": {
      "type": "local",
      "command": ["uvx", "awslabs.aws-iac-mcp-server@latest"],
      "environment": {
        "AWS_PROFILE": "default",
        "FASTMCP_LOG_LEVEL": "ERROR",
      },
      "enabled": true,
    },
  },
  "permission": {
    "bash": {
      "git status": "allow",
      "git diff": "allow",
      "git *": "ask",
      "*": "allow",
    },
  },
}
